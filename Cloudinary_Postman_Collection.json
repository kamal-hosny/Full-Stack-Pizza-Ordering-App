{
  "info": {
    "name": "Cloudinary API Tests",
    "description": "Collection for testing Cloudinary uploads",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Upload via Your API",
      "request": {
        "method": "POST",
        "header": [],
        "body": {
          "mode": "formdata",
          "formdata": [
            {
              "key": "file",
              "type": "file",
              "src": []
            },
            {
              "key": "pathName",
              "value": "test_images",
              "type": "text"
            }
          ]
        },
        "url": {
          "raw": "{{base_url}}/api/upload",
          "host": ["{{base_url}}"],
          "path": ["api", "upload"]
        }
      }
    },
    {
      "name": "Upload Direct to Cloudinary",
      "request": {
        "method": "POST",
        "header": [],
        "body": {
          "mode": "formdata",
          "formdata": [
            {
              "key": "file",
              "type": "file",
              "src": []
            },
            {
              "key": "folder",
              "value": "test_folder",
              "type": "text"
            },
            {
              "key": "transformation",
              "value": "w_200,h_200,c_fill,g_face",
              "type": "text"
            }
          ]
        },
        "url": {
          "raw": "https://api.cloudinary.com/v1_1/{{cloud_name}}/image/upload",
          "protocol": "https",
          "host": ["api", "cloudinary", "com"],
          "path": ["v1_1", "{{cloud_name}}", "image", "upload"]
        }
      }
    },
    {
      "name": "Upload with Base64",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"file\": \"data:image/jpeg;base64,{{base64_image}}\",\n  \"folder\": \"test_folder\",\n  \"transformation\": [\n    {\n      \"width\": 200,\n      \"height\": 200,\n      \"crop\": \"fill\",\n      \"gravity\": \"face\"\n    }\n  ]\n}"
        },
        "url": {
          "raw": "https://api.cloudinary.com/v1_1/{{cloud_name}}/image/upload",
          "protocol": "https",
          "host": ["api", "cloudinary", "com"],
          "path": ["v1_1", "{{cloud_name}}", "image", "upload"]
        }
      }
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:3000"
    },
    {
      "key": "cloud_name",
      "value": "dizj9rluo"
    },
    {
      "key": "base64_image",
      "value": "YOUR_BASE64_STRING_HERE"
    }
  ]
}
